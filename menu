#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{  
	int a,b,r,opcion;
	cout<<"ingrese el valor de a:";
	cin>>a;
	cout<<"ingrese el valor de b:";
	cin>>b;
	do{
		cout<<"    menu    "<<endl;
		cout<<"1.- suma    "<<endl;
		cout<<"2.- resta   "<<endl;
		cout<<"3.- producto"<<endl;
		cout<<"4.- diviciÃ³n"<<endl;
		cin>>opcion;
		switch (opcion)
		{
		case 1: r= a + b;
			break;
		case 2: r= a - b;
			break;
		case 3: r= a * b;
			break;
		case 4: r= a / b;
			break;
		case 0: cout<<"salir del programa";
			break;
		default:cout<<"opcion invalida, elija otra opcion";
		}
		cout<<"el resultado es:"<<r<<endl;
	}
	while(opcion !=0);
	getch();
}
