// ecuacion.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{ int a,b,c,d,e,f;
  float x=0, y=0;
  if(a==0)
  {y=c/b;
   x=(f+(e*y))/d;
  }
  else if(d==0)
  { y=f/e;
    x=(c-(b*y))/a;
  }
  else if(b==0)
  { x=c/a;
    y=(f-(d*x))/e;
  }
  else if(e==0)
  { x=f/d;
  y=(c-(a-x))/b;
  }
